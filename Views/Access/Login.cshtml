@model Indentity_Auth.Models.VMLogin
@{
	Layout = null;
}

<!DOCTYPE html>

<html>
<head>
	<title>Login</title>
</head>
<body>
    <div class="container mt-5">
		<div class="row justify-content-center align-items=-enter">
			<div class="col-sm-12 col-md-12 col-lg-4">
				<h1 class="mb-3">Login</h1>

				<form asp-controller="Access" asp-action="Login" method="post">
					<div asp-validation-summery="All" class="text-danger"></div>
					<div class="mb-3">
						<input type="email" placeholder="Email" asp-for="EMail">
						<input type="password" placeholder="Password" asp-for="Password">

						<label>
							<input type="checkbox" asp-for="KeepLoggedIn" />
							Keep me logged in.
						</label>

						<button type="submit">Login</button>

						@if(ViewData["ValidateMessage"] != null){
							<br/>
							<br/>
							<label>@ViewData["ValidateMessage"]</label>
						}
						
					</div>
				</form>
			</div>
		</div>
	</div>
</body>
</html>

